@model AdminUserViewModel;
@{
    Layout = "_AdminLayout";
}
<style>
    .buttonDiv{
        margin-bottom:10px;
    }
</style>
<div class="container-fluid pt-4">
    @if (TempData["success"] != null)
    {
        <div id="statusDiv" class="alert-success" style="margin-bottom:10px;">
            @TempData["success"]
        </div>
        <script>
            setTimeout(()=>{
                $("#statusDiv").fadeOut();
            },2000);
        </script>
    }
    <div class="row">
        <div class="col-md-6">
            <div class="buttonDiv">
                <a href="/admin/addAdmin" class="btn btn-success" style="color:#ffffff"><i class="fa-solid fa-plus"></i> Add new admin</a>
            </div>
            <div class="card">
                <div class="card-header text-white" style="background-color:#2A3335;">
                    <h6 style="color:#ffffff;">Admin users</h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name Surname</th>
                                <th>Email Address</th>
                                <th>Phone Number</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Admins)
                            {
                                <tr>
                                    <td>@user.NameSurname</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td><a class="btn btn-sm btn-primary" href="/admin/userDetails/@user.Id">Details</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="buttonDiv">
                <a href="/admin/addUser" class="btn btn-success" style="color:#ffffff"><i class="fa-solid fa-plus"></i> Add new user</a>
            </div>
            <div class="card">
                <div class="card-header text-white" style="background-color:#2A3335;">
                    <h6 style="color:#ffffff;">All users</h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name Surname</th>
                                <th>Email Address</th>
                                <th>Phone Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.NameSurname</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td><a class="btn btn-sm btn-primary" href="/admin/userDetails/@user.Id">Details</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if ('@TempData["adminNameSurname"]' != null && '@TempData["adminNameSurname"]' != '') {
        localStorage.setItem("adminNameSurname", '@TempData["adminNameSurname"]');
    }
</script>