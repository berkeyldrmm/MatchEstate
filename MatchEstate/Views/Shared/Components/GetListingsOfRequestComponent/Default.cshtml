@using Shared.Dtos.PropertyListing
@model List<PropertyListingCardDto>

@if (Model.Count() == 0)
{
    <p class="text-warning">There is no suitable request for this listing.</p>
}
else
{
    @foreach(var listing in Model){
        <div class="card mb-2 ml-4">
            <div class="card-header">
                @listing.Title (@listing.PropertyType)
            </div>
            <div class="card-body">
                <h5><b>Listing Title:</b> @listing.Title</h5>
                <p><b>Client Name Surname:</b> @listing.ClientNameSurname</p>
                <p><b>Property Type:</b> @listing.PropertyType</p>
                <p><b>Property Status:</b> @listing.PropertyStatus</p>
                <p><b>District/City:</b> @listing.Address</p>
                <p><b>Price Range:</b> @listing.Price <i class="fa fa-dollar"></i></p>
                <p><b>Added Date:</b> @listing.AddedDate</p>
                <a href="/propertylisting/detail/@listing.Id" class="btn btn-primary">View the listing</a>
            </div>
        </div>
    }
}